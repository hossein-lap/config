<?xml version="1.0"?>
<JWM>
    <!-- Key bindings -->
    <Key key="Up">up</Key>
    <Key key="Down">down</Key>
    <Key key="Right">right</Key>
    <Key key="Left">left</Key>
    <Key key="h">left</Key>
    <Key key="j">down</Key>
    <Key key="k">up</Key>
    <Key key="l">right</Key>
    <Key key="Return">select</Key>
    <Key key="Escape">escape</Key>

    <!-- <Key mask="1" key="Tab">nextdesktop</Key> -->
    <Key mask="A" key="j">next</Key>
    <Key mask="A" key="k">prev</Key>
    <Key mask="A" key="Tab">nextstacked</Key>
    <Key mask="SA" key="Tab">prevstacked</Key>
    <!-- <Key mask="A" key="F4">close</Key> -->
    <Key mask="A" key="#">desktop#</Key>
    <Key mask="A" key="F1">root:3</Key>
    <Key mask="A" key="F2">window</Key>

    <Key mask="1" key="Up">maximize</Key>
    <Key mask="1" key="Down">maximize</Key>
    <!-- <Key mask="4" key="Up">maxtop</Key> -->
    <!-- <Key mask="4" key="Down">maxbottom</Key> -->
    <Key mask="1" key="Left">maxleft</Key>
    <Key mask="1" key="Right">maxright</Key>

    <!-- <Key mask="CA" key="Up">udesktop</Key> -->
    <!-- <Key mask="CA" key="Down">ddesktop</Key> -->
    <Key mask="CA" key="Right">rdesktop</Key>
    <Key mask="CA" key="Left">ldesktop</Key>
    <Key mask="SA" key="Right">sendr</Key>
    <Key mask="SA" key="Left">sendl</Key>

    <!-- CTRL + ALT +  -->
    <Key mask="CA" key="t">exec:st</Key>

    <!-- SUPER (4) + -->
    <Key mask="1S" key="C">close</Key>
    <Key mask="1S" key="r">exec:jwm -restart</Key>
    <!-- <Key mask="AS" key="q">exec:dmenu-exit -wm jwm</Key> -->
    <Key mask="A" key="p">exec:dmenu_run -p Run -l 20</Key>
    <!-- <Key mask="4S" key="f">exec:st lfub</Key> -->

    <!-- CTRL =+ SHIFT + -->
    <Key mask="CS" key="Escape">exec:st btop || st htop || st top</Key>

  <!-- Key resize
    <Key mask="4" key="Up">maxtop</Key>
  -->

</JWM>
